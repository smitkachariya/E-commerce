@model E_commerce.Models.LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<div class="container py-5" style="max-width: 500px;">
	<div class="card shadow-lg border-0">
		<div class="card-header bg-success text-white text-center py-3">
			<h2 class="mb-0">
				<i class="fas fa-sign-in-alt mr-2"></i>Welcome Back
			</h2>
		</div>
		<div class="card-body p-4">
			<form asp-action="Login" method="post">
				<div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
				
				<div class="mb-3">
					<label asp-for="Email" class="form-label font-weight-bold">
						<i class="fas fa-envelope mr-1"></i>Email Address
					</label>
					<input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
					<span asp-validation-for="Email" class="text-danger small"></span>
				</div>
				
				<div class="mb-3">
					<label asp-for="Password" class="form-label font-weight-bold">
						<i class="fas fa-lock mr-1"></i>Password
					</label>
					<input asp-for="Password" class="form-control form-control-lg" placeholder="Enter your password" />
					<span asp-validation-for="Password" class="text-danger small"></span>
				</div>
				
				<div class="form-check mb-4">
					<input asp-for="RememberMe" class="form-check-input" />
					<label asp-for="RememberMe" class="form-check-label">
						Remember me on this device
					</label>
				</div>
				
				<button type="submit" class="btn btn-success btn-lg w-100 mb-3">
					<i class="fas fa-sign-in-alt mr-2"></i>Sign In
				</button>
				
				<div class="text-center">
					<span class="text-muted">New to our marketplace? </span>
					<a asp-controller="Account" asp-action="Register" class="text-decoration-none font-weight-bold">Create an account</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}


