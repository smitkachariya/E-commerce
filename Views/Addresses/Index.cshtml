@model IEnumerable<E_commerce.Models.CustomerAddress>
@{
    ViewData["Title"] = "My Addresses";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0"><i class="fas fa-address-book mr-2"></i>My Addresses</h2>
            <p class="text-muted">Manage your saved shipping addresses</p>
        </div>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus mr-1"></i>Add Address</a>
    </div>

    @if(TempData["Success"] != null){<div class="alert alert-success">@TempData["Success"]</div>}

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">You have no saved addresses yet. Add one using the button above.</div>
            </div>
        }
        else
        {
            foreach (var a in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 @(a.IsDefault ? "border-primary" : "")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title mb-1">@a.Label @if(a.IsDefault){<span class="badge badge-primary">Default</span>}</h5>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-toggle="dropdown">Actions</button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@a.CustomerAddressId">Edit</a>
                                        <form asp-action="Delete" asp-route-id="@a.CustomerAddressId" method="post" onsubmit="return confirm('Delete this address?');">
                                            <button type="submit" class="dropdown-item text-danger">Delete</button>
                                        </form>
                                        @if(!a.IsDefault){
                                            <form asp-action="SetDefault" asp-route-id="@a.CustomerAddressId" method="post">
                                                <button type="submit" class="dropdown-item">Make Default</button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                            <p class="mb-1"><strong>@a.RecipientName</strong> â€¢ @a.Phone</p>
                            <p class="mb-0 small">@a.Street<br />@a.City @if(!string.IsNullOrWhiteSpace(a.State)){<text>, @a.State</text>} @a.PostalCode<br />@a.Country</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div>
        <a asp-controller="Order" asp-action="Checkout" class="btn btn-outline-secondary"><i class="fas fa-arrow-left mr-1"></i>Back to Checkout</a>
    </div>
</div>
