@model List<E_commerce.Models.Order>
@{
    ViewData["Title"] = "Seller Orders";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-clipboard-list mr-2"></i>Customer Orders</h2>
                    <p class="text-muted">Manage orders for your products</p>
                </div>
                <div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-filter mr-1"></i>Filter by Status
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#" onclick="filterOrders('all')">All Orders</a>
                            <a class="dropdown-item" href="#" onclick="filterOrders('pending')">Pending</a>
                            <a class="dropdown-item" href="#" onclick="filterOrders('processing')">Processing</a>
                            <a class="dropdown-item" href="#" onclick="filterOrders('shipped')">Shipped</a>
                            <a class="dropdown-item" href="#" onclick="filterOrders('delivered')">Delivered</a>
                        </div>
                    </div>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle mr-2"></i>@TempData["Success"]
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-clipboard fa-5x text-muted mb-4"></i>
                    <h4 class="text-muted">No Orders Yet</h4>
                    <p class="text-muted">You haven't received any orders for your products yet.</p>
                    <a asp-controller="Products" asp-action="MyProducts" class="btn btn-primary">
                        <i class="fas fa-store mr-1"></i>Manage My Products
                    </a>
                </div>
            }
            else
            {
                <!-- Orders Summary Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-center bg-warning text-white">
                            <div class="card-body">
                                <h4>@Model.Count(o => o.Status == E_commerce.Models.OrderStatus.Pending)</h4>
                                <p class="mb-0">Pending Orders</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-info text-white">
                            <div class="card-body">
                                <h4>@Model.Count(o => o.Status == E_commerce.Models.OrderStatus.Processing)</h4>
                                <p class="mb-0">Processing</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-primary text-white">
                            <div class="card-body">
                                <h4>@Model.Count(o => o.Status == E_commerce.Models.OrderStatus.Shipped)</h4>
                                <p class="mb-0">Shipped</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-success text-white">
                            <div class="card-body">
                                <h4>@Model.Count(o => o.Status == E_commerce.Models.OrderStatus.Delivered)</h4>
                                <p class="mb-0">Delivered</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orders Table -->
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Customer</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr class="order-row" data-status="@order.Status.ToString().ToLower()">
                                            <td>
                                                <strong>@order.OrderNumber</strong><br>
                                                <small class="text-muted">@order.OrderDate.ToString("MMM dd, hh:mm tt")</small>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@order.ContactName</strong><br>
                                                    <small class="text-muted">@order.ContactEmail</small>
                                                </div>
                                            </td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge badge-secondary">@order.Items.Count item@(order.Items.Count == 1 ? "" : "s")</span>
                                                <br>
                                                <small class="text-muted">
                                                    @foreach (var item in order.Items.Take(2))
                                                    {
                                                        <span>@item.ProductName</span>
                                                        if (item != order.Items.Take(2).Last()) 
                                                        { 
                                                            <span>, </span> 
                                                        }
                                                    }
                                                    @if (order.Items.Count > 2)
                                                    {
                                                        <span>...</span>
                                                    }
                                                </small>
                                            </td>
                                            <td>
                                                <strong class="text-primary">â‚¹ @order.Total.ToString("F2")</strong>
                                            </td>
                                            <td>
                                                <div class="dropdown">
                                                    @switch (order.Status)
                                                    {
                                                        case E_commerce.Models.OrderStatus.Pending:
                                                            <button class="btn btn-warning btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                                                Pending
                                                            </button>
                                                            break;
                                                        case E_commerce.Models.OrderStatus.Processing:
                                                            <button class="btn btn-info btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                                                Processing
                                                            </button>
                                                            break;
                                                        case E_commerce.Models.OrderStatus.Shipped:
                                                            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                                                Shipped
                                                            </button>
                                                            break;
                                                        case E_commerce.Models.OrderStatus.Delivered:
                                                            <button class="btn btn-success btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                                                Delivered
                                                            </button>
                                                            break;
                                                        case E_commerce.Models.OrderStatus.Cancelled:
                                                            <button class="btn btn-danger btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                                                Cancelled
                                                            </button>
                                                            break;
                                                        default:
                                                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                                                @order.Status
                                                            </button>
                                                            break;
                                                    }
                                                    <div class="dropdown-menu">
                                                        @if (order.Status == E_commerce.Models.OrderStatus.Pending)
                                                        {
                                                            <a class="dropdown-item" href="#" onclick="updateOrderStatus(@order.OrderId, 'Processing')">
                                                                <i class="fas fa-cog mr-1"></i>Mark as Processing
                                                            </a>
                                                        }
                                                        @if (order.Status == E_commerce.Models.OrderStatus.Processing)
                                                        {
                                                            <a class="dropdown-item" href="#" onclick="updateOrderStatus(@order.OrderId, 'Shipped')">
                                                                <i class="fas fa-shipping-fast mr-1"></i>Mark as Shipped
                                                            </a>
                                                        }
                                                        @if (order.Status == E_commerce.Models.OrderStatus.Shipped)
                                                        {
                                                            <a class="dropdown-item" href="#" onclick="updateOrderStatus(@order.OrderId, 'Delivered')">
                                                                <i class="fas fa-check-circle mr-1"></i>Mark as Delivered
                                                            </a>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button class="btn btn-outline-primary btn-sm" onclick="viewOrderDetails(@order.OrderId)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-outline-secondary btn-sm" onclick="printOrder(@order.OrderId)">
                                                        <i class="fas fa-print"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Order Details Modal -->
<div class="modal fade" id="orderDetailsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Order Details</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body" id="orderDetailsContent">
                <!-- Order details will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateOrderStatus(orderId, status) {
            if (confirm(`Are you sure you want to mark this order as ${status}?`)) {
                $.ajax({
                    url: '@Url.Action("UpdateStatus", "Order")',
                    type: 'POST',
                    data: {
                        orderId: orderId,
                        status: status
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Error updating order status. Please try again.');
                    }
                });
            }
        }

        function filterOrders(status) {
            const rows = document.querySelectorAll('.order-row');
            rows.forEach(row => {
                if (status === 'all' || row.dataset.status === status) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function viewOrderDetails(orderId) {
            // Simple implementation - redirect to order details
            window.open(`/Order/Details/${orderId}`, '_blank');
        }

        function printOrder(orderId) {
            // Future implementation for printing order
            alert('Print functionality will be implemented soon.');
        }
    </script>
}
