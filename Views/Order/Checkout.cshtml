@model E_commerce.Models.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card mr-2"></i>Checkout
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Checkout" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        @if (Model.SavedAddresses != null && Model.SavedAddresses.Any())
                        {
                            <div class="mb-4 p-3 border rounded bg-light">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="mb-0"><i class="fas fa-address-book mr-2"></i>Saved Addresses</h5>
                                    <div class="small">
                                        <a asp-controller="Addresses" asp-action="Index" class="text-decoration-none">
                                            Manage addresses
                                        </a>
                                    </div>
                                </div>
                                @foreach (var addr in Model.SavedAddresses)
                                {
                                    <div class="custom-control custom-radio mb-2">
                                        <input type="radio" class="custom-control-input saved-address-radio" id="addr_@addr.CustomerAddressId" name="SelectedAddressId" value="@addr.CustomerAddressId"
                                               data-street="@addr.Street"
                                               data-city="@addr.City"
                                               data-postal="@addr.PostalCode"
                                               data-country="@addr.Country"
                                               data-recipient="@addr.RecipientName"
                                               data-phone="@addr.Phone"
                                               @(Model.SelectedAddressId == addr.CustomerAddressId ? "checked" : "") />
                                        <label class="custom-control-label" for="addr_@addr.CustomerAddressId">
                                            <strong>@addr.Label</strong> - @addr.Street, @addr.City (@addr.PostalCode) @if(addr.IsDefault){<span class="badge badge-primary ml-1">Default</span>}
                                            <br /><small>@addr.RecipientName • @addr.Phone</small>
                                        </label>
                                    </div>
                                }
                                <div class="form-text text-muted">Select an existing address or fill the form below to use a new one.</div>
                                <hr />
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="useNewAddressToggle" onchange="toggleNewAddress(this)">
                                    <label class="custom-control-label" for="useNewAddressToggle">Use a new address instead</label>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info py-2">
                                <i class="fas fa-info-circle mr-1"></i>
                                No saved addresses for this account yet.
                                <a asp-controller="Addresses" asp-action="Create" class="ml-1">Add one</a>
                                or
                                <a asp-controller="Addresses" asp-action="Index" class="ml-1">manage addresses</a>.
                            </div>
                        }

                        <!-- Contact Information -->
                        <h5 class="mb-3"><i class="fas fa-user mr-2"></i>Contact Information</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ContactName" class="font-weight-bold"></label>
                                    <input asp-for="ContactName" class="form-control" placeholder="Enter your full name" />
                                    <span asp-validation-for="ContactName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ContactEmail" class="font-weight-bold"></label>
                                    <input asp-for="ContactEmail" class="form-control" placeholder="Enter your email" />
                                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ContactPhone" class="font-weight-bold"></label>
                                    <input asp-for="ContactPhone" class="form-control" placeholder="Enter your phone number" />
                                    <span asp-validation-for="ContactPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Shipping Information (New / Override) -->
                        <h5 class="mb-3 d-flex align-items-center">
                            <i class="fas fa-shipping-fast mr-2"></i><span>Shipping Address</span>
                            <small class="text-muted ml-2" id="addressModeInfo">@(Model.SavedAddresses.Any() ? "(Using selected saved address)" : "(New address)")</small>
                        </h5>
                        <input type="hidden" id="isUsingNewAddress" name="UsingNewAddress" value="@(Model.SavedAddresses.Any() ? "false" : "true")" />
                        <div class="form-group">
                            <label asp-for="ShippingAddress" class="font-weight-bold"></label>
                            <input asp-for="ShippingAddress" class="form-control" placeholder="Enter your street address" />
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ShippingCity" class="font-weight-bold"></label>
                                    <input asp-for="ShippingCity" class="form-control" placeholder="Enter your city" />
                                    <span asp-validation-for="ShippingCity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="ShippingPostalCode" class="font-weight-bold"></label>
                                    <input asp-for="ShippingPostalCode" class="form-control" placeholder="ZIP/Postal Code" />
                                    <span asp-validation-for="ShippingPostalCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="ShippingCountry" class="font-weight-bold"></label>
                                    <input asp-for="ShippingCountry" class="form-control" />
                                    <span asp-validation-for="ShippingCountry" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="saveAddressOptions" style="display:@(Model.SavedAddresses.Any() ? "none" : "block")">
                            <div class="col-md-6">
                                <div class="custom-control custom-checkbox mb-2">
                                    <input asp-for="SaveThisAddress" class="custom-control-input" id="saveAddressChk" />
                                    <label class="custom-control-label" for="saveAddressChk">Save this address</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="custom-control custom-checkbox mb-2">
                                    <input asp-for="MakeDefault" class="custom-control-input" id="makeDefaultChk" />
                                    <label class="custom-control-label" for="makeDefaultChk">Make default</label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Payment Method -->
                        <h5 class="mb-3"><i class="fas fa-credit-card mr-2"></i>Payment Method</h5>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" asp-for="PaymentMethod" value="CashOnDelivery" class="custom-control-input" id="cod" checked>
                                <label class="custom-control-label" for="cod">
                                    <i class="fas fa-money-bill-wave mr-2"></i>Cash on Delivery
                                </label>
                            </div>
                            <small class="text-muted ml-4">Pay when your order is delivered</small>
                        </div>

                        <!-- Order Notes -->
                        <div class="form-group">
                            <label asp-for="Notes" class="font-weight-bold"></label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any special instructions for your order (optional)"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="text-right">
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary mr-2">
                                <i class="fas fa-arrow-left mr-1"></i>Back to Cart
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle mr-2"></i>Place Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <!-- Cart Items -->
                    @if (Model.CartItems != null && Model.CartItems.Any())
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                <div class="mr-3">
                                    @if (item.Product.Images.Any())
                                    {
                                        <img src="@item.Product.Images.First().ImagePath" 
                                             alt="@item.Product.Name" 
                                             class="img-thumbnail" 
                                             style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light border rounded d-flex align-items-center justify-content-center" 
                                             style="width: 50px; height: 50px;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@item.Product.Name</h6>
                                    <small class="text-muted">Qty: @item.Quantity</small>
                                </div>
                                <div>
                                    <strong>₹ @((item.Product.Price * item.Quantity).ToString("F2"))</strong>
                                </div>
                            </div>
                        }
                    }

                    <!-- Order Totals -->
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span>₹ @Model.SubTotal.ToString("F2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <span class="text-success">Free</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax:</span>
                        <span>₹ @Model.Tax.ToString("F2")</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total:</strong>
                        <strong class="text-primary">₹ @Model.Total.ToString("F2")</strong>
                    </div>
                </div>
            </div>

            <!-- Security Notice -->
            <div class="card mt-3">
                <div class="card-body text-center">
                    <i class="fas fa-shield-alt fa-2x text-success mb-2"></i>
                    <h6>Secure Checkout</h6>
                    <small class="text-muted">Your information is protected with SSL encryption</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function setAddressFieldsEnabled(enabled) {
            const ids = ['ShippingAddress','ShippingCity','ShippingPostalCode','ShippingCountry','ContactName','ContactPhone'];
            ids.forEach(id => {
                const el = document.getElementById(id);
                if (el) el.disabled = !enabled;
            });
        }

        function fillAddressFieldsFromRadio(radio) {
            if (!radio) return;
            const map = {
                'ShippingAddress': radio.dataset.street,
                'ShippingCity': radio.dataset.city,
                'ShippingPostalCode': radio.dataset.postal,
                'ShippingCountry': radio.dataset.country,
                'ContactName': radio.dataset.recipient,
                'ContactPhone': radio.dataset.phone
            };
            Object.keys(map).forEach(id => {
                const el = document.getElementById(id);
                if (el && typeof map[id] !== 'undefined') el.value = map[id] || '';
            });
        }

        function applySavedSelection() {
            const checked = document.querySelector("input[name='SelectedAddressId']:checked");
            if (checked) {
                fillAddressFieldsFromRadio(checked);
                setAddressFieldsEnabled(false);
                document.getElementById('isUsingNewAddress').value = 'false';
                document.getElementById('saveAddressOptions').style.display = 'none';
                document.getElementById('addressModeInfo').innerText = '(Using selected saved address)';
            }
        }

        function toggleNewAddress(cb) {
            const usingNew = cb.checked;
            document.getElementById('isUsingNewAddress').value = usingNew;
            document.getElementById('saveAddressOptions').style.display = usingNew ? 'flex' : 'none';
            document.getElementById('addressModeInfo').innerText = usingNew ? '(New address)' : '(Using selected saved address)';

            const radios = document.querySelectorAll("input[name='SelectedAddressId']");
            radios.forEach(r => {
                r.disabled = usingNew;
                if (usingNew) r.checked = false;
            });

            if (usingNew) {
                // Enable and clear input fields for new address
                setAddressFieldsEnabled(true);
                ['ShippingAddress','ShippingCity','ShippingPostalCode','ShippingCountry','ContactName','ContactPhone'].forEach(id => {
                    const el = document.getElementById(id);
                    if (el) el.value = '';
                });
            } else {
                // Re-apply saved selection
                applySavedSelection();
            }
        }

        // When a saved address radio is selected, populate fields and keep them disabled
        document.querySelectorAll('.saved-address-radio').forEach(r => {
            r.addEventListener('change', () => {
                fillAddressFieldsFromRadio(r);
                setAddressFieldsEnabled(false);
                document.getElementById('isUsingNewAddress').value = 'false';
                document.getElementById('saveAddressOptions').style.display = 'none';
                document.getElementById('addressModeInfo').innerText = '(Using selected saved address)';
            });
        });

        // On load, if there are saved addresses and we're not using a new one, enforce disabled state and populate from selected
        (function initAddressMode(){
            const hasSaved = document.querySelectorAll("input[name='SelectedAddressId']").length > 0;
            const usingNew = document.getElementById('isUsingNewAddress').value === 'true';
            if (hasSaved && !usingNew) {
                applySavedSelection();
            }
        })();
    </script>
}
