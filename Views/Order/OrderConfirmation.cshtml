@model E_commerce.Models.OrderConfirmationViewModel
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Success Message -->
            <div class="text-center mb-5">
                <div class="text-success mb-3">
                    <i class="fas fa-check-circle fa-5x"></i>
                </div>
                <h2 class="text-success">Order Placed Successfully!</h2>
                <p class="lead">Thank you for your purchase. Your order has been confirmed.</p>
            </div>

            <!-- Order Details Card -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-receipt mr-2"></i>Order Details
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Order Number</h6>
                            <p class="font-weight-bold">@Model.OrderNumber</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Order Date</h6>
                            <p>@Model.Order.OrderDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Estimated Delivery</h6>
                            <p class="text-primary font-weight-bold">@Model.EstimatedDelivery</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Order Status</h6>
                            <span class="badge badge-warning">@Model.Order.Status</span>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <h6 class="text-muted mb-3">Items Ordered</h6>
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            @foreach (var item in Model.Order.Items)
                            {
                                <tr>
                                    <td class="align-middle" style="width: 80px;">
                                        @if (!string.IsNullOrEmpty(item.ProductImagePath))
                                        {
                                            <img src="@item.ProductImagePath" 
                                                 alt="@item.ProductName" 
                                                 class="img-thumbnail" 
                                                 style="width: 60px; height: 60px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light border rounded d-flex align-items-center justify-content-center" 
                                                 style="width: 60px; height: 60px;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <h6 class="mb-1">@item.ProductName</h6>
                                        <small class="text-muted">@item.ProductCategory</small>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-muted">Qty: @item.Quantity</span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span>@item.Price.ToString("C")</span>
                                    </td>
                                    <td class="align-middle text-right">
                                        <strong>@item.SubTotal.ToString("C")</strong>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>

                    <!-- Order Total -->
                    <div class="row">
                        <div class="col-md-6 offset-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal:</span>
                                        <span>@Model.Order.SubTotal.ToString("C")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Shipping:</span>
                                        <span class="text-success">@Model.Order.ShippingCost.ToString("C")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Tax:</span>
                                        <span>@Model.Order.Tax.ToString("C")</span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <strong>Total:</strong>
                                        <strong class="text-primary">@Model.Order.Total.ToString("C")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Shipping Information -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-shipping-fast mr-2"></i>Shipping Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Ship To</h6>
                            <p class="mb-1">@Model.Order.ContactName</p>
                            <p class="mb-1">@Model.Order.ShippingAddress</p>
                            <p class="mb-1">@Model.Order.ShippingCity, @Model.Order.ShippingPostalCode</p>
                            <p class="mb-0">@Model.Order.ShippingCountry</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Contact Information</h6>
                            <p class="mb-1">
                                <i class="fas fa-envelope mr-2"></i>@Model.Order.ContactEmail
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-phone mr-2"></i>@Model.Order.ContactPhone
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Next Steps -->
            <div class="card mt-4">
                <div class="card-body text-center">
                    <h5>What's Next?</h5>
                    <p class="text-muted">@Model.Message</p>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="text-center">
                                <i class="fas fa-box fa-2x text-primary mb-2"></i>
                                <h6>Track Your Order</h6>
                                <p class="small text-muted">Monitor your order status and delivery progress</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center">
                                <i class="fas fa-envelope fa-2x text-success mb-2"></i>
                                <h6>Email Updates</h6>
                                <p class="small text-muted">We'll send you updates about your order</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-action="MyOrders" class="btn btn-primary mr-3">
                            <i class="fas fa-list mr-1"></i>View My Orders
                        </a>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-shopping-bag mr-1"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>