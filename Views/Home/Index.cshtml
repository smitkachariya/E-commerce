@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5 mb-5 rounded">
    <div class="container text-center">
        <h1 class="display-4 font-weight-bold mb-3">
            <i class="fas fa-shopping-cart mr-3"></i>
            Welcome to E-Commerce Marketplace
        </h1>
        <p class="lead mb-4">Your one-stop destination for buying and selling amazing products</p>
        
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="d-flex flex-column flex-md-row gap-3 justify-content-center">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-lg">
                            <i class="fas fa-user-plus mr-2"></i>Get Started - Join Now
                        </a>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-eye mr-2"></i>Browse Products
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-light text-dark d-inline-block">
                <i class="fas fa-user-circle mr-2"></i>
                Welcome back, <strong>@User.Identity.Name</strong>!
                @if (User.IsInRole("Seller"))
                {
                    <span class="badge bg-info ms-2">Seller</span>
                }
                else if (User.IsInRole("Admin"))
                {
                    <span class="badge bg-danger ms-2">Admin</span>
                }
                else
                {
                    <span class="badge bg-success ms-2">Customer</span>
                }
            </div>
        }
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row text-center mb-4">
        <div class="col-12">
            <h2 class="h3 mb-3">Why Choose Our Marketplace?</h2>
            <p class="text-muted">Experience the best of online shopping and selling</p>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="text-primary mb-3">
                        <i class="fas fa-shopping-cart fa-3x"></i>
                    </div>
                    <h5 class="card-title">Easy Shopping</h5>
                    <p class="card-text text-muted">Browse thousands of products, add to cart, and checkout with ease.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="text-success mb-3">
                        <i class="fas fa-store fa-3x"></i>
                    </div>
                    <h5 class="card-title">Sell Your Products</h5>
                    <p class="card-text text-muted">Join as a seller and reach thousands of potential customers.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="text-info mb-3">
                        <i class="fas fa-shield-alt fa-3x"></i>
                    </div>
                    <h5 class="card-title">Secure & Trusted</h5>
                    <p class="card-text text-muted">Shop with confidence knowing your data and transactions are secure.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions for Authenticated Users -->
@if (User.Identity.IsAuthenticated)
{
    <div class="container mb-5">
        <div class="row">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-bolt mr-2"></i>Quick Actions
                        </h4>
                        <div class="row g-3">
                            @if (User.IsInRole("Customer"))
                            {
                                <div class="col-md-4">
                                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-search me-2"></i>Browse Products
                                    </a>
                                </div>
                                <div class="col-md-4">
                                    <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-success w-100">
                                        <i class="fas fa-shopping-cart me-2"></i>View Cart
                                    </a>
                                </div>
                                <div class="col-md-4">
                                    <a asp-controller="Order" asp-action="MyOrders" class="btn btn-outline-info w-100">
                                        <i class="fas fa-box me-2"></i>My Orders
                                    </a>
                                </div>
                            }
                            else if (User.IsInRole("Seller"))
                            {
                                <div class="col-md-4">
                                    <a asp-controller="Products" asp-action="Create" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-plus me-2"></i>Add Product
                                    </a>
                                </div>
                                <div class="col-md-4">
                                    <a asp-controller="Products" asp-action="MyProducts" class="btn btn-outline-success w-100">
                                        <i class="fas fa-store me-2"></i>My Products
                                    </a>
                                </div>
                                <div class="col-md-4">
                                    <a asp-controller="Order" asp-action="SellerOrders" class="btn btn-outline-info w-100">
                                        <i class="fas fa-clipboard-list me-2"></i>View Orders
                                    </a>
                                </div>
                            }
                            @* Admin panel removed *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
