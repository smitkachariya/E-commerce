@model E_commerce.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6">
            @if (Model.Images.Any())
            {
                <div id="productCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Model.Images[i].ImagePath" class="d-block w-100" 
                                     alt="@Model.Name" style="height: 400px; object-fit: cover;">
                            </div>
                        }
                    </div>
                    @if (Model.Images.Count > 1)
                    {
                        <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </a>
                        <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </a>
                    }
                </div>
                
                <!-- Thumbnail Navigation -->
                @if (Model.Images.Count > 1)
                {
                    <div class="row mt-3">
                        @for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <div class="col-3">
                                <img src="@Model.Images[i].ImagePath" class="img-thumbnail thumbnail-nav" 
                                     alt="@Model.Name" data-target="#productCarousel" data-slide-to="@i"
                                     style="height: 80px; object-fit: cover; cursor: pointer;">
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                    <i class="fas fa-image fa-5x text-muted"></i>
                </div>
            }
        </div>

        <!-- Product Info -->
        <div class="col-md-6">
            <div class="product-info">
                <h1 class="h2 mb-3">@Model.Name</h1>
                
                <div class="mb-3">
                    <span class="badge badge-secondary mr-2">@Model.Category</span>
                    @if (Model.Stock > 0)
                    {
                        <span class="badge badge-success">In Stock (@Model.Stock available)</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Out of Stock</span>
                    }
                </div>

                <div class="price-section mb-4">
                    <h3 class="text-success mb-0">$@Model.Price.ToString("F2")</h3>
                </div>

                <div class="seller-info mb-4">
                    <h6 class="text-muted">Sold by:</h6>
                    <p class="mb-0">
                        <i class="fas fa-store mr-1"></i>
                        <strong>@Model.Seller.UserName</strong>
                    </p>
                </div>

                <!-- Purchase Section -->
                <div class="purchase-section mb-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Customer") || !User.IsInRole("Seller"))
                        {
                            @if (Model.Stock > 0)
                            {
                                <div class="card border-success">
                                    <div class="card-body">
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" id="addToCartForm">
                                            <input type="hidden" name="productId" value="@Model.ProductId" />
                                            
                                            <div class="row align-items-end">
                                                <div class="col-md-4">
                                                    <label for="quantity" class="font-weight-bold">Quantity:</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <button type="button" class="btn btn-outline-secondary" onclick="decreaseQuantity()">-</button>
                                                        </div>
                                                        <input type="number" name="quantity" id="quantity" class="form-control text-center" 
                                                               value="1" min="1" max="@Model.Stock" onchange="updateTotal()">
                                                        <div class="input-group-append">
                                                            <button type="button" class="btn btn-outline-secondary" onclick="increaseQuantity()">+</button>
                                                        </div>
                                                    </div>
                                                    <small class="text-muted">Max: @Model.Stock available</small>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="font-weight-bold">Total Price:</label>
                                                    <div class="h4 text-success mb-0" id="totalPrice">
                                                        $@Model.Price.ToString("F2")
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <button type="submit" class="btn btn-success btn-lg btn-block">
                                                        <i class="fas fa-cart-plus mr-2"></i>Add to Cart
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                        
                                        <hr class="my-3">
                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="d-flex align-items-center text-success mb-2">
                                                    <i class="fas fa-truck mr-2"></i>
                                                    <span>Free shipping on orders over $50</span>
                                                </div>
                                                <div class="d-flex align-items-center text-info mb-2">
                                                    <i class="fas fa-undo mr-2"></i>
                                                    <span>30-day return policy</span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="d-flex align-items-center text-primary mb-2">
                                                    <i class="fas fa-shield-alt mr-2"></i>
                                                    <span>Secure payment</span>
                                                </div>
                                                <div class="d-flex align-items-center text-warning">
                                                    <i class="fas fa-clock mr-2"></i>
                                                    <span>Ships within 2-3 business days</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle mr-2"></i>
                                    <strong>Out of Stock</strong><br>
                                    This product is currently unavailable. Check back later or contact the seller.
                                </div>
                            }
                        }
                        else if (User.IsInRole("Seller"))
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle mr-2"></i>
                                <strong>Seller Account</strong><br>
                                You're viewing this as a seller. <a asp-controller="Account" asp-action="Logout">Switch to customer account</a> to purchase.
                            </div>
                        }
                    }
                    else
                    {
                        <div class="card border-primary">
                            <div class="card-body text-center">
                                <h5 class="text-primary">Want to purchase this item?</h5>
                                <p class="text-muted">Sign in to add this product to your cart and checkout.</p>
                                <div class="btn-group">
                                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                                        <i class="fas fa-sign-in-alt mr-1"></i>Login
                                    </a>
                                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">
                                        <i class="fas fa-user-plus mr-1"></i>Register
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Seller Actions -->
                @if (User.IsInRole("Seller") && Model.SellerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                {
                    <div class="seller-actions mb-4">
                        <h6 class="text-muted">Seller Actions:</h6>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">
                                <i class="fas fa-edit mr-1"></i>Edit Product
                            </a>
                            <a asp-action="MyProducts" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left mr-1"></i>My Products
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Product Description -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Product Description</h5>
                </div>
                <div class="card-body">
                    <p class="lead">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Products (placeholder for future) -->
    <div class="row mt-4">
        <div class="col-12">
            <h5>You might also like</h5>
            <p class="text-muted">Related products feature coming soon...</p>
        </div>
    </div>
</div>

<style>
.thumbnail-nav {
    transition: opacity 0.3s;
}

.thumbnail-nav:hover {
    opacity: 0.7;
}

.product-info {
    padding: 20px 0;
}

.price-section {
    border-top: 1px solid #dee2e6;
    border-bottom: 1px solid #dee2e6;
    padding: 20px 0;
}

.purchase-section .card {
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.purchase-section .input-group-prepend .btn,
.purchase-section .input-group-append .btn {
    border: 1px solid #ced4da;
}
</style>

@section Scripts {
    <script>
        const productPrice = @Model.Price;
        const maxStock = @Model.Stock;
        
        function increaseQuantity() {
            const quantityInput = document.getElementById('quantity');
            let currentValue = parseInt(quantityInput.value);
            if (currentValue < maxStock) {
                quantityInput.value = currentValue + 1;
                updateTotal();
            }
        }
        
        function decreaseQuantity() {
            const quantityInput = document.getElementById('quantity');
            let currentValue = parseInt(quantityInput.value);
            if (currentValue > 1) {
                quantityInput.value = currentValue - 1;
                updateTotal();
            }
        }
        
        function updateTotal() {
            const quantityInput = document.getElementById('quantity');
            const quantity = parseInt(quantityInput.value) || 1;
            const total = productPrice * quantity;
            
            // Validate quantity
            if (quantity > maxStock) {
                quantityInput.value = maxStock;
                updateTotal();
                return;
            }
            
            if (quantity < 1) {
                quantityInput.value = 1;
                updateTotal();
                return;
            }
            
            document.getElementById('totalPrice').textContent = '$' + total.toFixed(2);
        }
        
        // Form submission with success message
        document.getElementById('addToCartForm')?.addEventListener('submit', function(e) {
            const quantity = parseInt(document.getElementById('quantity').value);
            if (quantity > maxStock) {
                e.preventDefault();
                alert('Quantity cannot exceed available stock (' + maxStock + ')');
                return false;
            }
            
            // Show loading state
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Adding...';
            submitBtn.disabled = true;
            
            // Reset button after a delay (in case of form errors)
            setTimeout(() => {
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }, 3000);
        });
        
        // Initialize total on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateTotal();
        });
    </script>
}