@model E_commerce.Models.CreateProductViewModel
@{
    ViewData["Title"] = "Add New Product";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-plus-circle mr-2"></i>Add New Product
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <!-- Product Name -->
                        <div class="form-group">
                            <label asp-for="Name" class="font-weight-bold">
                                <i class="fas fa-tag mr-1"></i>@Html.DisplayNameFor(m => m.Name)
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter product name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="form-group">
                            <label asp-for="Description" class="font-weight-bold">
                                <i class="fas fa-align-left mr-1"></i>@Html.DisplayNameFor(m => m.Description)
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Describe your product (minimum 20 characters)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="form-text text-muted">Minimum 20 characters required</small>
                        </div>

                        <div class="row">
                            <!-- Price -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Price" class="font-weight-bold">
                                        <i class="fas fa-rupee-sign mr-1"></i>@Html.DisplayNameFor(m => m.Price)
                                    </label>
                                    <input asp-for="Price" class="form-control" type="decimal" step="0.01" 
                                           placeholder="0.00" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Stock -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Stock" class="font-weight-bold">
                                        <i class="fas fa-boxes mr-1"></i>@Html.DisplayNameFor(m => m.Stock)
                                    </label>
                                    <input asp-for="Stock" class="form-control" type="number" min="0" 
                                           placeholder="Available quantity" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Category -->
                        <div class="form-group">
                            <label asp-for="Category" class="font-weight-bold">
                                <i class="fas fa-list mr-1"></i>@Html.DisplayNameFor(m => m.Category)
                            </label>
                            <select asp-for="Category" class="form-control">
                                <option value="">-- Select Category --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <!-- Product Images -->
                        <div class="form-group">
                            <label asp-for="Images" class="font-weight-bold">
                                <i class="fas fa-images mr-1"></i>@Html.DisplayNameFor(m => m.Images)
                            </label>
                            <input asp-for="Images" type="file" class="form-control-file" multiple accept="image/*" />
                            <span asp-validation-for="Images" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Select one or more images (JPG, PNG, GIF). First image will be the main display image.
                            </small>
                        </div>

                        <!-- Image Preview -->
                        <div id="imagePreview" class="form-group" style="display: none;">
                            <label class="font-weight-bold">Image Preview:</label>
                            <div id="previewContainer" class="d-flex flex-wrap"></div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success btn-lg mr-2">
                                <i class="fas fa-save mr-2"></i>Create Product
                            </button>
                            <a asp-action="MyProducts" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left mr-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Image preview functionality
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            const files = e.target.files;
            const previewContainer = document.getElementById('previewContainer');
            const imagePreview = document.getElementById('imagePreview');
            
            previewContainer.innerHTML = '';
            
            if (files.length > 0) {
                imagePreview.style.display = 'block';
                
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.className = 'img-thumbnail mr-2 mb-2';
                        img.style.width = '100px';
                        img.style.height = '100px';
                        img.style.objectFit = 'cover';
                        previewContainer.appendChild(img);
                    };
                    
                    reader.readAsDataURL(file);
                }
            } else {
                imagePreview.style.display = 'none';
            }
        });
    </script>
}