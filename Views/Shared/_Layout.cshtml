<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-commerce Marketplace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-shopping-cart mr-2"></i>E-Commerce Marketplace
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home mr-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-th-large mr-1"></i>Products
                            </a>
                        </li>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            @if (User.IsInRole("Customer") || !User.IsInRole("Seller"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                        <i class="fas fa-shopping-cart mr-1"></i>Cart
                                        <span id="cart-badge" class="badge badge-primary ml-1" style="display: none;">0</span>
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Order" asp-action="MyOrders">
                                        <i class="fas fa-box mr-1"></i>My Orders
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Seller"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Products" asp-action="MyProducts">
                                        <i class="fas fa-store mr-1"></i>My Products
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Order" asp-action="SellerOrders">
                                        <i class="fas fa-clipboard-list mr-1"></i>Orders
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt mr-1"></i>Dashboard
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="navbar-text mr-2">
                                    <i class="fas fa-user-circle mr-1"></i>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span>Admin</span>
                                    }
                                    else if (User.IsInRole("Seller"))
                                    {
                                        <span>Seller</span>
                                    }
                                    else
                                    {
                                        <span>Customer</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">
                                        <i class="fas fa-sign-out-alt mr-1"></i>Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt mr-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus mr-1"></i>Sign Up
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - E_commerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @if (User.Identity.IsAuthenticated && (User.IsInRole("Customer") || !User.IsInRole("Seller")))
    {
        <script>
            // Update cart badge count
            function updateCartBadge() {
                $.get('@Url.Action("GetCartItemCount", "Cart")', function(count) {
                    if (count > 0) {
                        $('#cart-badge').text(count).show();
                    } else {
                        $('#cart-badge').hide();
                    }
                }).fail(function() {
                    // If cart endpoint fails, hide badge
                    $('#cart-badge').hide();
                });
            }
            
            // Update cart badge on page load
            $(document).ready(function() {
                updateCartBadge();
                
                // Update cart badge every 30 seconds to keep it fresh
                setInterval(updateCartBadge, 30000);
            });
            
            // Global function to update cart badge after adding items
            window.refreshCartBadge = updateCartBadge;
        </script>
    }
    
    @RenderSection("Scripts", required: false)
</body>
</html>
