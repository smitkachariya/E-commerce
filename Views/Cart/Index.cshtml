@model List<E_commerce.Models.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-shopping-cart"></i> Shopping Cart</h2>
                @if (Model.Any())
                {
                    <form asp-action="ClearCart" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to clear your cart?')">
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-trash"></i> Clear Cart
                        </button>
                    </form>
                }
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Your cart is empty</h4>
                    <p class="text-muted">Add some products to your cart to get started.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-shopping-bag"></i> Continue Shopping
                    </a>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                @foreach (var item in Model)
                                {
                                    <div class="row border-bottom py-3" id="cart-item-@item.Id">
                                        <div class="col-md-2">
                                            @if (item.Product.Images.Any())
                                            {
                                                <img src="@item.Product.Images.First().ImagePath" 
                                                     alt="@item.Product.Name" 
                                                     class="img-fluid rounded" 
                                                     style="max-height: 80px; width: 100%; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                                     style="height: 80px;">
                                                    <i class="fas fa-image text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-4">
                                            <h6><a asp-controller="Products" asp-action="Details" asp-route-id="@item.Product.ProductId" class="text-decoration-none">@item.Product.Name</a></h6>
                                            <p class="text-muted small mb-1">by @item.Product.Seller.UserName</p>
                                            <p class="text-muted small mb-0">@item.Product.Category</p>
                                        </div>
                                        <div class="col-md-2">
                                            <strong>@item.Product.Price.ToString("C")</strong>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="input-group input-group-sm">
                                                <div class="input-group-prepend">
                                                    <button class="btn btn-outline-secondary btn-sm" type="button" onclick="updateQuantity(@item.Id, @item.Quantity - 1)">-</button>
                                                </div>
                                                <input type="number" class="form-control text-center" id="quantity-@item.Id" value="@item.Quantity" min="1" max="@item.Product.Stock" onchange="updateQuantity(@item.Id, this.value)">
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-secondary btn-sm" type="button" onclick="updateQuantity(@item.Id, @item.Quantity + 1)">+</button>
                                                </div>
                                            </div>
                                            <small class="text-muted">Stock: @item.Product.Stock</small>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <strong id="subtotal-@item.Id">@((item.Product.Price * item.Quantity).ToString("C"))</strong>
                                                <form asp-action="RemoveItem" method="post" class="d-inline ml-2" onsubmit="return confirm('Remove this item from cart?')">
                                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal (@Model.Sum(x => x.Quantity) items):</span>
                                    <strong id="cart-total">@ViewBag.Total.ToString("C")</strong>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Shipping:</span>
                                    <span class="text-success">Free</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between mb-3">
                                    <strong>Total:</strong>
                                    <strong class="text-primary" id="final-total">@ViewBag.Total.ToString("C")</strong>
                                </div>
                                <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary btn-block btn-lg">
                                    <i class="fas fa-credit-card"></i> Proceed to Checkout
                                </a>
                                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary btn-block mt-2">
                                    <i class="fas fa-arrow-left"></i> Continue Shopping
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateQuantity(cartItemId, newQuantity) {
            if (newQuantity < 0) return;
            
            $.ajax({
                url: '@Url.Action("UpdateQuantity", "Cart")',
                type: 'POST',
                data: {
                    cartItemId: cartItemId,
                    quantity: parseInt(newQuantity)
                },
                success: function (response) {
                    if (response.success) {
                        if (parseInt(newQuantity) === 0) {
                            // Item was removed
                            $('#cart-item-' + cartItemId).fadeOut(function() {
                                $(this).remove();
                                updateCartTotals();
                            });
                        } else {
                            // Update subtotal
                            $('#quantity-' + cartItemId).val(newQuantity);
                            $('#subtotal-' + cartItemId).text(response.newSubtotal);
                            updateCartTotals();
                        }
                    } else {
                        alert(response.message);
                        // Reset quantity input to previous value
                        location.reload();
                    }
                },
                error: function () {
                    alert('Error updating cart. Please try again.');
                    location.reload();
                }
            });
        }
        
        function updateCartTotals() {
            // Recalculate totals client-side (simplified)
            // In a real app, you might want to make another AJAX call to get accurate totals
            setTimeout(function() {
                location.reload();
            }, 500);
        }
    </script>
}